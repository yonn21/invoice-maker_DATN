<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/BottomNavigationActiveTextAppearance</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationInactiveTextAppearance</item>
        <item name="itemIconSize">23dp</item>
        <item name="itemPaddingTop">21dp</item>
        <item name="itemPaddingBottom">21dp</item>
    </style>

    <style name="BottomNavigationActiveTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BottomNavigationInactiveTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CustomSearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@drawable/search_icon</item>
    </style>

    <style name="CustomSearchEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/textHint</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/switch_on</item>
        <item name="colorControlNormal">@color/switch_off</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_dialog</item>
    </style>

</resources>